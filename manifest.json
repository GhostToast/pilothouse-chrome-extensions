{
  "manifest_version": 2,
  "name": "Pilothouse XDebug",
  "description": "Toggle Pilothouse XDebug in browser tabs",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon-inactive.png",
    "active_icon": "icon-active.png"
  },
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab"
  ]
}
